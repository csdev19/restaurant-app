{
  "compilerOptions": {
    "target": "esnext", /*Specify ECMAScript target version*/
    "outDir": "web-app/js" /*where to compile javascript files*/,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "baseUrl": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@atoms/*": ["./atoms/*"],
      "@molecules/*": ["./molecules/*"],
      "@organisms/*": ["./organisms/*"],
      "@templates/*": ["./templates/*"],
      "@shared/*": ["./shared/*"],
      "@contexts/*": ["./contexts/*"],
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "i18n.js"
  ],
  "exclude": [
    "node_modules"
  ],
}
